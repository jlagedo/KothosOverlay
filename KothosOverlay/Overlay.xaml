<UserControl x:Class="KothosOverlay.Overlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KothosOverlay"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="1059.999" 
             >
    <Grid Margin="0,0,10,10">

        <Label x:Name="lblTitle" Content="Kothos Overlay" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#FFD71414" FontWeight="Bold" FontSize="18"/>
        <TextBox x:Name="tbLog" Margin="10,342,467,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Text = "{Binding MessageLog, Mode = TwoWay}" />
        <DataGrid x:Name="dgCombatData" AutoGenerateColumns="False" Margin="10,44,10,238" ItemsSource="{Binding Players}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="DPS" Binding="{Binding DPS}"></DataGridTextColumn>
                <!--<DataGridTextColumn Header="EncDPS" Binding="{Binding EncDPS}"></DataGridTextColumn>-->
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
